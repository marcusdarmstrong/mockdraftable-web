{
  "name": "mockdraftable-web",
  "version": "0.1.0",
  "description": "web front end for mockdraftable.com",
  "main": "lib/index.js",
  "scripts": {
    "start": "nf start",
    "lint": "eslint ./src",
    "clean": "rm -rf lib/* && rm -f public/bundle*",
    "prebuild": "npm run clean && npm run -s lint",
    "build": "if [ \"${NODE_ENV}\" = \"production\" ]; then npm run build:prod; else npm run build:dev; fi",
    "build:dev": "npm run build:js:dev && time npm run build:css:dev",
    "build:prod": "npm run build:js:prod && npm run build:css:prod",
    "build:js:dev": "time npm run build:server && time npm run build:client:dev",
    "build:js:prod": "npm run build:server && npm run build:client:prod",
    "build:server": "babel --comments=false src -d lib",
    "build:client:dev": "browserify lib/client.js | hashmark -s 'public/bundle-{hash}.js' -n js_bundle_name -l 8 -m './lib/bundles.json'",
    "build:client:prod": "browserify lib/client.js | uglifyjs -c -m | hashmark -s 'public/bundle-{hash}.js' -n js_bundle_name -l 8 -m './lib/bundles.json'",
    "build:css:prod": "node-sass --importer node_modules/node-sass-module-importer/index.js --output-style compressed sass/index.scss | hashmark -s 'public/bundle-{hash}.css' -n css_bundle_name -l 8 -m './lib/bundles.json'",
    "build:css:dev": "node-sass --importer node_modules/node-sass-module-importer/index.js --output-style expanded sass/index.scss | hashmark -s 'public/bundle-{hash}.css' -n css_bundle_name -l 8 -m './lib/bundles.json'",
    "postinstall": "npm run build",
    "flow": "flow",
    "heroku-postbuild": "npm prune --production"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/marcusdarmstrong/mockdraftable-web.git"
  },
  "author": "Marcus Armstrong",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/marcusdarmstrong/mockdraftable-web/issues"
  },
  "homepage": "https://github.com/marcusdarmstrong/mockdraftable-web#readme",
  "dependencies": {
    "babel-polyfill": "6.23.0",
    "body-parser": "1.17.2",
    "compression": "1.6.2",
    "cookie-parser": "1.4.3",
    "express": "4.15.3",
    "foreman": "2.0.0",
    "hsl-to-hex": "1.0.0",
    "isomorphic-fetch": "2.2.1",
    "lodash": "4.17.4",
    "md5": "2.2.1",
    "multi-slider": "4.0.0",
    "pg-promise": "5.9.6",
    "react": "15.6.1",
    "react-dom": "15.6.1",
    "react-redux": "5.0.5",
    "redux": "3.7.0",
    "redux-shortcuts": "0.0.3",
    "redux-thunk": "2.2.0",
    "response-time": "2.3.2",
    "scrypt": "6.0.3",
    "serve-favicon": "2.4.3"
  },
  "devDependencies": {
    "babel-cli": "6.24.1",
    "babel-core": "6.25.0",
    "babel-eslint": "7.2.3",
    "babel-plugin-lodash": "3.2.11",
    "babel-plugin-transform-builtin-extend": "1.1.2",
    "babel-preset-latest": "6.24.1",
    "babel-preset-react": "6.24.1",
    "babel-preset-stage-2": "6.24.1",
    "bootstrap": "4.0.0-alpha.6",
    "browserify": "14.4.0",
    "eslint": "3.19.0",
    "eslint-config-airbnb": "15.0.1",
    "eslint-plugin-flowtype": "2.34.0",
    "eslint-plugin-import": "2.6.0",
    "eslint-plugin-jsx-a11y": "5.0.3",
    "eslint-plugin-react": "7.1.0",
    "flow-bin": "0.48.0",
    "hashmark": "5.0.0",
    "node-sass": "4.5.3",
    "node-sass-module-importer": "0.1.0",
    "uglify-js": "3.0.19"
  }
}
